<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vikrant.musicalstructure">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.vikrant.musicalstructure.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.vikrant.musicalstructure.PlaylistsAcitivity"
            android:label="Playlists"
            android:parentActivityName="com.vikrant.musicalstructure.MainActivity"></activity>
        <activity
            android:name="com.vikrant.musicalstructure.AlbumsActivity"
            android:label="Albums"
            android:parentActivityName="com.vikrant.musicalstructure.MainActivity"></activity>
        <activity
            android:name="com.vikrant.musicalstructure.ArtistsActivity"
            android:label="Artist"
            android:parentActivityName="com.vikrant.musicalstructure.MainActivity"></activity>
        <activity
            android:name="com.vikrant.musicalstructure.PlayMusicActivity"
            android:label="Now Playing"
            android:parentActivityName="com.vikrant.musicalstructure.MainActivity"></activity>
        <activity
            android:name="com.vikrant.musicalstructure.SettingsActivity"
            android:label="Settings"
            android:parentActivityName="com.vikrant.musicalstructure.MainActivity"></activity>
        <activity
            android:name="com.vikrant.musicalstructure.BuyActivity"
            android:label="Buy"
            android:parentActivityName="com.vikrant.musicalstructure.MainActivity"></activity>

    </application>

</manifest>